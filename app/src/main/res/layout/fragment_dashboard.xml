<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.dashboard.DashboardFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="320dp"
            android:background="@drawable/habitaciones_cards"
            android:id="@+id/promo1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="20dp"
                android:id="@+id/card"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/cielo"
                    android:id="@+id/image"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinco noches al precio de 4"
                app:layout_constraintTop_toBottomOf="@id/card"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/chivo"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Crown Plaza"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/hotel_name"
                android:fontFamily="@font/chivo"
                android:layout_marginStart="10dp"
                android:id="@+id/hotel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se ofrece una promocion 5x4\nDisponible hasta agotar habitaciones\n\nFecha limite: 24 de Diciembre del 2022"
                app:layout_constraintTop_toBottomOf="@id/hotel"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/chivo"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                android:id="@+id/rate_num"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="320dp"
            android:background="@drawable/habitaciones_cards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/promo1"
            android:elevation="5dp"
            android:id="@+id/promo2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="20dp"
                android:id="@+id/card2"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/plato"
                    android:id="@+id/image2"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comida gratis"
                app:layout_constraintTop_toBottomOf="@id/card2"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/chivo"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/name2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motel el cactus"
                app:layout_constraintTop_toBottomOf="@id/name2"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/hotel_name"
                android:fontFamily="@font/chivo"
                android:layout_marginStart="10dp"
                android:id="@+id/hotel2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se ofrece desayuno y comida gratis en la\nreservacion de mas de 3 habitaciones\n\nFecha limite: 1 de Enero del 2022"
                app:layout_constraintTop_toBottomOf="@id/hotel2"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/chivo"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                android:id="@+id/rate_num2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="320dp"
            android:background="@drawable/habitaciones_cards"
            android:id="@+id/promo3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/promo2"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="20dp"
                android:id="@+id/card3"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/cielo"
                    android:id="@+id/image3"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinco noches al precio de 4"
                app:layout_constraintTop_toBottomOf="@id/card3"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/chivo"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/name3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Crown Plaza"
                app:layout_constraintTop_toBottomOf="@id/name3"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/hotel_name"
                android:fontFamily="@font/chivo"
                android:layout_marginStart="10dp"
                android:id="@+id/hotel3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se ofrece una promocion 5x4\nDisponible hasta agotar habitaciones\n\nFecha limite: 24 de Diciembre del 2022"
                app:layout_constraintTop_toBottomOf="@id/hotel3"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/chivo"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                android:id="@+id/rate_num3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="320dp"
            android:background="@drawable/habitaciones_cards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/promo3"
            android:elevation="5dp"
            android:id="@+id/promo4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="20dp"
                android:id="@+id/card4"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/plato"
                    android:id="@+id/image4"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comida gratis"
                app:layout_constraintTop_toBottomOf="@id/card4"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/chivo"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/name4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motel el cactus"
                app:layout_constraintTop_toBottomOf="@id/name4"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/hotel_name"
                android:fontFamily="@font/chivo"
                android:layout_marginStart="10dp"
                android:id="@+id/hotel4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se ofrece desayuno y comida gratis en la\nreservacion de mas de 3 habitaciones\n\nFecha limite: 1 de Enero del 2022"
                app:layout_constraintTop_toBottomOf="@id/hotel4"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/chivo"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                android:id="@+id/rate_num4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>